<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="ReturnButton"
         >

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Visited Places"
            android:textSize="20sp"
            android:background="#FFFFFF"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView4"
            android:src="@drawable/returnbutton"
            android:cropToPadding="false"
            android:background="#FFFFFF"
            android:adjustViewBounds="false"
            android:layout_gravity="right"
            android:paddingRight="10dp" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_margin="1dp">

        <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:stretchColumns="*"
            android:padding="1dp"
            android:id="@+id/AllTableLayout">


        <TableRow android:minHeight="40dp"
            android:layout_margin="1dp"
           >
            <TextView
                android:layout_width="wrap_content"
                android:text="Location"
                android:textSize="16dp"
                android:layout_column="0"
                />

            <TextView
                android:layout_width="wrap_content"
                android:text="Visited Time"
                android:textSize="16dp"
                android:layout_column="1"
                 />

            <TextView

            android:text="Pending Tasks "
            android:textSize="16dp"
            android:layout_column="2"
               />


            <TextView

                android:text=" "
                android:textSize="0dp"
                android:layout_column="3"/>


        </TableRow>

        <TableRow android:minHeight="100dp" android:background="@layout/cell_shape"
            android:layout_margin="3dp"
            android:id="@+id/AllTableRow0">
            <TextView

                android:id="@+id/location0"
                android:layout_margin="1dp" />

            <TextView
                android:padding="3dip"
                android:id="@+id/location0_time"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TableRow0"
                android:layout_margin="1dp">

            </LinearLayout>


        </TableRow>

        <TableRow android:minHeight="100dp" android:background="@layout/cell_shape"
            android:layout_margin="3dp"
            android:id="@+id/AllTableRow1">
            <TextView

                android:id="@+id/location1"
                android:layout_margin="1dp" />
            <TextView android:padding="3dip"
                android:id="@+id/location1_time"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TableRow1"
                android:layout_margin="1dp">
            </LinearLayout>
        </TableRow>

        <TableRow android:minHeight="100dp"  android:background="@layout/cell_shape"
            android:layout_margin="3dp"
            android:id="@+id/AllTableRow2">
            <TextView
                android:padding="3dip"
                android:id="@+id/location2"
                android:layout_margin="1dp" />
            <TextView android:padding="3dip"
                android:id="@+id/location2_time"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TableRow2"
                android:layout_margin="1dp">
            </LinearLayout>

        </TableRow>

        <TableRow  android:minHeight="100dp" android:background="@layout/cell_shape"
            android:layout_margin="3dp"
            android:id="@+id/AllTableRow3">
            <TextView
                android:padding="3dip"
                android:id="@+id/location3"
                android:layout_margin="1dp" />

            <TextView android:padding="3dip"
                android:id="@+id/location3_time"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TableRow3"
                android:layout_margin="1dp">
            </LinearLayout>



        </TableRow >

            <TableRow  android:minHeight="100dp" android:background="@layout/cell_shape"
                android:layout_margin="3dp"
                android:id="@+id/AllTableRow4">
            <TextView
                android:padding="3dip"
                android:id="@+id/location4"
                android:layout_margin="1dp" />
            <TextView android:padding="3dip"
                android:id="@+id/location4_time"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/TableRow4"
                android:layout_margin="1dp">
            </LinearLayout>

        </TableRow>

            <TableRow  android:minHeight="100dp" android:background="@layout/cell_shape"
                android:layout_margin="3dp"
                android:id="@+id/AllTableRow5">
            <TextView
                android:padding="3dip"
                android:id="@+id/location5"
                android:layout_margin="1dp" />
            <TextView android:padding="3dip"
                android:id="@+id/location5_time"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TableRow5"
                android:layout_margin="1dp">
            </LinearLayout>

        </TableRow>

            <TableRow  android:minHeight="100dp" android:background="@layout/cell_shape"
                android:layout_margin="3dp"
                android:id="@+id/AllTableRow6">
            <TextView
                android:padding="3dip"
                android:id="@+id/location6"
                android:layout_margin="1dp" />
            <TextView android:padding="3dip"
                android:id="@+id/location6_time"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TableRow6"
                android:layout_margin="1dp">
            </LinearLayout>

        </TableRow>

        </TableLayout>
    </ScrollView>

</LinearLayout>