<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
>


    <TabHost
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@android:id/tabhost"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:minHeight="?attr/actionBarSize"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true">


                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar_promote" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView_promote"
                    android:text="Getting current location"
                    android:paddingTop="10dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/linearLayout_basic1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.82"
                    android:layout_toLeftOf="@+id/imageView4"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                <LinearLayout
                    android:id="@+id/linearLayout_rewardbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView_rewards1"
                        android:src="@drawable/rewards_cup_unactive"
                        android:cropToPadding="false"
                        android:background="#FFFFFF"
                        android:adjustViewBounds="false"
                        android:layout_gravity="left"
                        android:paddingRight="1dp"
                        android:visibility="invisible" />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView_rewards2"
                        android:src="@drawable/rewards_cup_unactive"
                        android:cropToPadding="false"
                        android:background="#FFFFFF"
                        android:adjustViewBounds="false"
                        android:layout_gravity="left"
                        android:paddingRight="1dp"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView_rewards3"
                        android:src="@drawable/rewards_cup_unactive"
                        android:cropToPadding="false"
                        android:background="#FFFFFF"
                        android:adjustViewBounds="false"
                        android:layout_gravity="left"
                        android:paddingRight="1dp"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView_rewards4"
                        android:src="@drawable/rewards_cup_unactive"
                        android:cropToPadding="false"
                        android:background="#FFFFFF"
                        android:adjustViewBounds="false"
                        android:layout_gravity="left"
                        android:paddingRight="1dp"
                        android:visibility="invisible" />




                    <ProgressBar
                        style="@android:style/Widget.ProgressBar.Horizontal"

                        android:layout_width="130dp"
                        android:layout_height="20dp"
                        android:id="@+id/progressBar_rewards"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        android:progress="0"
                        android:indeterminate="false"
                        android:max="100"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="43dp"
                        android:layout_height="25dp"
                        android:layout_margin="5dp"
                        android:background="#FFFFFF"
                        android:textColor="#000000"
                        android:id="@+id/textView_Rewards"/>

                </LinearLayout>

                </LinearLayout>





                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView4"
                    android:src="@drawable/returnbutton"
                    android:cropToPadding="false"
                    android:background="#FFFFFF"
                    android:adjustViewBounds="false"
                    android:paddingRight="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:onClick="ReturnButton"/>

</RelativeLayout>
            </android.support.v7.widget.Toolbar>




            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearLayout_basic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_detail"
                    android:layout_width="match_parent"
                    android:layout_height="246dp"
                    android:orientation="vertical">

                </LinearLayout>


            </FrameLayout>
        </LinearLayout>
    </TabHost>


</RelativeLayout>