                <Button
                    android:layout_width="278dp"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:id="@+id/button"
                    android:layout_gravity="center"
                    android:onClick="clickButton_submit" />

            </LinearLayout>

            </ScrollView>

        </LinearLayout>
