<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linearLayout_basic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.82"
                android:layout_toLeftOf="@+id/imageView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:id="@+id/linearLayout_rewardbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBar_promote" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textView_promote"
                        android:text="Connecting to Internet"
                        android:paddingTop="10dp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView_rewards1"
                        android:src="@drawable/rewards_cup_unactive"
                        android:cropToPadding="false"
                        android:background="#FFFFFF"
                        android:adjustViewBounds="false"
                        android:layout_gravity="left"
                        android:paddingRight="1dp"
                        android:visibility="invisible" />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView_rewards2"
                        android:src="@drawable/rewards_cup_unactive"
                        android:cropToPadding="false"
                        android:background="#FFFFFF"
                        android:adjustViewBounds="false"
                        android:layout_gravity="left"
                        android:paddingRight="1dp"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView_rewards3"
                        android:src="@drawable/rewards_cup_unactive"
                        android:cropToPadding="false"
                        android:background="#FFFFFF"
                        android:adjustViewBounds="false"
                        android:layout_gravity="left"
                        android:paddingRight="1dp"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView_rewards4"
                        android:src="@drawable/rewards_cup_unactive"
                        android:cropToPadding="false"
                        android:background="#FFFFFF"
                        android:adjustViewBounds="false"
                        android:layout_gravity="left"
                        android:paddingRight="1dp"
                        android:visibility="invisible" />




                    <ProgressBar
                        style="@android:style/Widget.ProgressBar.Horizontal"

                        android:layout_width="130dp"
                        android:layout_height="20dp"
                        android:id="@+id/progressBar_rewards"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        android:progress="0"
                        android:indeterminate="false"
                        android:max="100"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="43dp"
                        android:layout_height="25dp"
                        android:layout_margin="5dp"
                        android:background="#FFFFFF"
                        android:textColor="#000000"
                        android:id="@+id/textView_Rewards"/>

                </LinearLayout>
            </LinearLayout>


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView4"
                android:src="@drawable/returnbutton"
                android:cropToPadding="false"
                android:background="#FFFFFF"
                android:adjustViewBounds="false"
                android:paddingRight="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:onClick="ReturnButton"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:layout_weight="0.08">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="This place makes me feel:"
                android:id="@+id/textView" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="79dp"
                            android:tag="1"
                            android:id="@+id/radioButton"
                            android:onClick="clickImage_happyface"/>

                        <ImageView
                            android:layout_width="115dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ratinghappyface"
                            android:id="@+id/imageView"
                            android:focusable="false"
                            android:clickable="true"
                            android:onClick="clickImage_happyface"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="74dp"
                            android:tag="2"
                            android:id="@+id/radioButton2"
                            android:onClick="clickImage_unhappyface"/>

                        <ImageView
                            android:layout_width="115dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ratingunhappyface"
                            android:id="@+id/imageView2"
                            android:focusable="false"
                            android:clickable="true"
                            android:onClick="clickImage_unhappyface"/>
                        </RadioGroup>
                    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="5dp">
            <!-- CLEANNESS:-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="28dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="CLEANNESS: "
                    android:id="@+id/textView4"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=""
                    android:id="@+id/textViewCLEANNESS" />

            </LinearLayout>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:id="@+id/ratingBarCLEANNESS"
                android:clickable="true" />
            <!--  SAFTY-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="SAFTY: "
                    android:id="@+id/textView3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=""
                    android:id="@+id/textViewSAFTY" />
            </LinearLayout>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:id="@+id/ratingBarSAFTY"
                android:clickable="true" />

            <!-- BEAUTIFULNESS-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="BEAUTY: "
                    android:id="@+id/textView5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=""
                    android:id="@+id/textViewBEAUTIFULNESS" />
            </LinearLayout>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:id="@+id/ratingBarBEAUTIFULNESS"
                android:clickable="true" />



            <!-- GREENNESS-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="GREENNESS: "
                    android:id="@+id/textViewGREENNESS0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=""
                    android:id="@+id/textViewGREENNESS" />
            </LinearLayout>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:id="@+id/ratingBarGREENNESS"
                android:clickable="true" />
            <!-- FRIENDLINESS-->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="FRIENDLINESS: "
                    android:id="@+id/textViewFRIENDLINESS0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=""
                    android:id="@+id/textViewFRIENDLINESS" />
            </LinearLayout>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:id="@+id/ratingBarFRIENDLINESS"
                android:clickable="true" />
            <!-- INTERESTINGNESS-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="CONVENIENCE: "
                    android:id="@+id/textViewCONVENIENCE0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=""
                    android:id="@+id/textViewCONVENIENCE" />
            </LinearLayout>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:id="@+id/ratingBarCONVENIENCE"
                android:clickable="true" />


        </LinearLayout>
